---
import SEO from "../components/SEO.astro";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <SEO
    title="Alvinosh | Contact"
    description="Contact me for any questions or inquiries."
    keywords={["landing page", "landing"]}
    slot="head"
  />
  <div class="w-full p-5"></div>
  <h1 class="text-4xl font-serif text-cyan">Contact me!</h1>
  <div class="w-full p-5"></div>

  <h3 class="text-xl font-serif text-cyan">Social Media</h3>
  <ul
    class="text-lg list-disc pl-5 decoration-dashed font-serif text-foreground"
  >
    <li>
      <a class="underline text-red active:text-orange" href="#">Github</a>
    </li>
    <li>
      <a class="underline text-red active:text-orange" href="#">Linkedin</a>
    </li>
    <li>
      <a class="underline text-red active:text-orange" href="#">Discord</a>
    </li>
  </ul>

  <div class="w-full p-5"></div>

  <h2 class="text-xl font-serif text-cyan">or you may write to me directly</h2>
  <form
    class="grid grid-cols-2 gap-2 mt-4 font-serif text-foreground"
    action="POST"
  >
    <div class="col-span-1">
      <label class="text-comment" for="first_name">First Name:</label>
      <input
        class="placeholder:text-comment p-4 bg-background brightness-90 border-b-2 shadow-lg border-comment w-full"
        type="text"
        placeholder="Enter your first name"
        name="first_name"
        id="first_name"
      />
    </div>
    <div class="col-span-1">
      <label class="text-comment" for="last_name">Last Name:</label>
      <input
        placeholder="Enter your last name"
        class="placeholder:text-comment p-4 bg-background brightness-90 border-b-2 shadow-lg border-comment w-full"
        type="text"
        name="last_name"
        id="last_name"
      />
    </div>
    <div class="col-span-2">
      <label class="text-comment" for="email">Email</label>
      <input
        placeholder="Enter your email"
        class="placeholder:text-comment p-4 bg-background border-comment w-full brightness-90 border-b-2 shadow-lg"
        type="email"
        name="email"
        id="email"
      />
    </div>
    <div class="col-span-2">
      <label class="text-comment" for="message">Message</label>
      <textarea
        placeholder="Write your message..."
        class="placeholder:text-comment p-4 bg-background border-b-2 border-comment col-span-2 w-full brightness-90 shadow-lg"
        name="message"
        id="message"
        cols="30"
        rows="10"></textarea>
    </div>
    <div class="col-span-2 flex flex-row items-center gap-2">
      <!-- checkbox -->
      <input
        class="accent-red w-5 h-5"
        type="checkbox"
        name="privacy"
        id="privacy"
      />
      <span>
        I have read and agree to the <a
          class="underline text-red active:text-orange"
          href="#">Privacy Policy</a
        >
      </span>
    </div>
    <div class="col-span-2 flex flex-row justify-end">
      <button
        class="bg-pink text-foreground py-4 px-8 font-serif text-xl shadow-lg"
        type="submit"
      >
        Send
      </button>
    </div>
  </form>
</MainLayout>
