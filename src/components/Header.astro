---
const { class: className } = Astro.props;

const navItems = [
  {
    title: "Home",
    href: "/",
  },
  {
    title: "Contact",
    href: "/contact/",
  },
  {
    title: "Blog",
    href: "/blog/",
  },
  {
    title: "Resume",
    href: "/resume/",
  },
];
---

<nav
  class:list={[
    "w-full flex bg-background flex-row justify-center items-center py-2 z-10",
    className,
  ]}
>
  <ul class="flex flex-row flex-wrap text-foreground font-serif">
    {
      navItems.map((item, i) => (
        <>
          <li
            class={`${item.href === Astro.url.pathname ? "text-orange" : ""}`}
          >
            <a class="py-2 px-1" href={item.href}>
              {item.title}
            </a>{" "}
          </li>
          {i < navItems.length - 1 && (
            <li class="text-comment flex items-center">/</li>
          )}
        </>
      ))
    }
  </ul>
</nav>
