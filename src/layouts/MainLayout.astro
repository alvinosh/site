---
import Container from "../components/Container.astro";
import Header from "../components/Header.astro";
import ThemePicker from "../components/ThemePicker.svelte";
import ThemeProvider from "../components/ThemeProvider.svelte";

// import BackgroundWinter from "../components/BackgroundWinter.astro";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/fav1icon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="overflow-x-hidden overflow-y-auto">
    <ThemeProvider client:load>
      <!-- <BackgroundWinter/> -->
      <Header class="fixed top-0" />
      <Container>
        <slot />
      </Container>

      <ThemePicker client:idle className="fixed bottom-0 right-0" />
    </ThemeProvider>
  </body>
</html>
